@{
    Product product = (Product)ViewData["product"];
}

<div class="container">

        <div class="row d-flex justify-content-center container ">

                <div class="col-10">
                   
                    <div class="card w-100 shadow p-3 mb-5 mt-5 bg-white rounded">
                        <h4 class="text-center p-2 border border-warning">@product.Name</h4>
                        <div class="row">
                            <div class="col-8">
                                <div class="embed-responsive embed-responsive-4by3">
                                    <img class="card-img-top embed-responsive-item" src="@product.Image" alt="">
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="h-100 d-flex flex-column justify-content-center">
                                <h5>Price: @product.Price $</h5>
                                <h5>
                                    Rate:
                                    @for (var j = 0; j < new Random().Next(1, 5); j++)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                </h5>
                                <h5>Description: @product.Description</h5>
                                <a href="#" class="btn mt-4">Add to Cart</a>
                            </div>
                        </div>
                            </div>

                    </div>

                </div>
        </div>

</div>
