
@{
    var products = (List<Product>)ViewData["products"];
}

<div class="Home">

    <div class="BackgroundImg">
        <div class="container">
            <div class="row">
                <div class="col-4 caption">
                    <h2>The Fashion is in your hands</h2>
                    <a class="btn mt-1" href="/User/Register">Register Now</a>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="LatestProducts">
    <h3 class="text-center productsTitle">Latest Products</h3>
    <div class="HomeProducts ">
        <div class="row d-flex justify-content-center container mx-auto">
            @foreach (var product in @products)
            {
            <div class="col-sm-12 col-md-4">
                <a class="w-100" asp-action="SelectProduct" asp-controller="Product" asp-route-id="@product.Id" role="button">
                    <div class="card w-100 shadow p-3 mb-5 bg-white rounded" id="@product.Id">
                        <div class="embed-responsive embed-responsive-4by3">
                            <img class="card-img-top embed-responsive-item" src="@product.Image" alt="@product.Name">
                        </div>
                       
                            <div class="card-body w-100 d-flex flex-column justify-content-center align-items-center text-center">
                                <h5 class="card-title">@product.Name</h5>
                                <h5 >@product.Price $</h5>
                                @for (var j = 0; j < new Random().Next(1, 5); j++)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                <a href="#" class="btn mx-auto">Add to Cart</a>
                            </div>
                        
                        </div>
                </a>
            </div>
            }
        </div>
        </div>
    </div>
    <div class="LatestProducts">
        <h3 class="text-center productsTitle">Top Products</h3>
        <div class="HomeProducts ">
            <div class="row d-flex justify-content-center container mx-auto">
                @foreach (var product in @products)
                {
                    <div class="col-sm-12 col-md-4">
                        <a class="w-100" asp-action="SelectProduct" asp-controller="Product" asp-route-id="@product.Id" role="button">
                            <div class="card w-100 shadow p-3 mb-5 bg-white rounded" id="@product.Id">
                                <div class="embed-responsive embed-responsive-4by3">
                                    <img class="card-img-top embed-responsive-item" src="@product.Image" alt="@product.Name">
                                </div>

                                <div class="card-body w-100 d-flex flex-column justify-content-center align-items-center text-center">
                                    <h5 class="card-title preventdefault">@product.Name</h5>
                                    <h5 class="preventdefault" >@product.Price $</h5>
                                    @for (var j = 0; j < new Random().Next(1, 5); j++)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    <a href="#" class="btn mx-auto">Add to Cart</a>
                                </div>

                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <footer>
        <form class="container">
            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="email" class="form-control form-control-sm" id="colFormLabelSm" placeholder="Subscribe to get the latest updates">
                    <button type="button" class="btn btn-info subscribe">Subscribe</button>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <img class="col-3" src="~/css/logo-coca-cola.png" alt="cocacola">
                <img class="col-3" src="~/css/logo-oppo.png" alt="oppo">
                <img class="col-3" src="~/css/logo-philips.png" alt="philips">
                <img class="col-3" src="~/css/logo-paypal.png" alt="paypal">
            </div>
        </form>
    </footer>